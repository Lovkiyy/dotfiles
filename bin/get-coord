#!/bin/sh
# This script returns latitude and longtitude separated by comma. Requires jq
file="${XDG_DATA_HOME:-$HOME/.local/share}/coordinates"
coord="$(curl -s https://ipinfo.io/geo | jq .loc | tr -d \" | tr ',' ':')"

if [ $coord ];then
  echo "$coord" | tee "$file"
else
  coord="$(cat "$file")"
fi

echo "$coord"

