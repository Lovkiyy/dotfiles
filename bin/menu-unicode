#!/bin/sh
# Give dmenu list of all unicode characters to copy.
# Shows the selected character in dunst if running.

# Must have xclip or wl-clipboard installed to even show menu.
xclip -h >/dev/null || wl-copy -h >/dev/null|| exit
if [ "$WAYLAND_DISPLAY" ];then
  COPY_COMMAND="wl-copy"
  COPY_PRIMARY_COMMAND="wl-copy -p"
else
  COPY_COMMAND="xclip -selection clipboard"
  COPY_PRIMARY_COMMAND="xclip"
fi

chosen=$(grep -v "#" "${XDG_CONFIG_HOME:-$HOME/.config}/emoji" | dmenu-color -i -l 20)

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | $COPY_COMMAND
notify-send "'$c' copied to clipboard." &

s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
echo "$s" | tr -d '\n' | $COPY_PRIMARY_COMMAND
notify-send "'$s' copied to primary." &
