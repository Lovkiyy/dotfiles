# Clipboard handling
alias xcopy='xsel -b -i -l /dev/null'
alias xpaste='xsel -b -o -l /dev/null'

alias cat=bat
alias mon=gotop

alias ex=exercism
alias ka=killall
alias _=sudo
alias d=dict
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xq="xbps-query"
alias ns="fzf-notes.sh"
alias tor="transmission-daemon"
alias ansicat="iconv -f CP437"
alias chill="mpv 'https://www.youtube.com/watch?v=hHW1oY26kxQ' &|"

# Global aliases
alias -g v=nvim
alias -g r=ranger
alias -g mk="mkdir -pv"
alias -g dush=ncdu
alias -g mpweb="mpv av://v4l2:/dev/video0"

alias -g L="| less"
alias -g G="| grep"

# Config stuff
alias ap="nvim $HOME/usr/notes/handbook/apps.md"

alias cfb="nvim $XDG_CONFIG_HOME/bspwm/bspwmrc"
