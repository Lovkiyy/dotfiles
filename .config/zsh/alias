# Clipboard handling
alias xcopy='xsel -b -i'
alias xpaste='xsel -b -o'

alias cat=bat
alias mon=gotop

alias ex=exercism
alias ka=killall
alias _=sudo
alias d=dict
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xq="xbps-query"
alias ns="fzf-notes.sh"

# Global aliases
alias -g v=nvim
alias -g r=ranger
alias -g mk="mkdir -pv"
alias -g dush=ncdu

alias -g L="| less"
alias -g G="| grep"

# Config stuff
alias ap="nvim $HOME/usr/notes/handbook/apps.md"

alias cfi="nvim $XDG_CONFIG_HOME/i3/config"
alias cfp="nvim $XDG_CONFIG_HOME/polybar/config"
alias cfv="nvim $XDG_CONFIG_HOME/nvim/init.vim"
alias cfr="nvim $XDG_CONFIG_HOME/ranger/rc.conf"
alias cfq="nvim $XDG_CONFIG_HOME/qutebrowser/config.py"

# Git aliases
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias gpl="git pull"
alias gps="git push"

# Go aliases
alias gor="go run"

# Defaults
alias ls="ls -hN --color=tty --group-directories-first"
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}"
alias calcurse="calcurse -D ~/notes/calcurse"

alias ...="../.."
alias ....="../../.."
