# Apps
super + Return
  $TERMINAL
super + {r,m}
  $TERMINAL -e {ranger,cmus}
super + w
  qutebrowser
super + {_,shift} + d
  {dmenu_exec,j4-dmenu-desktop --dmenu='dmenu-color -i -l 15'}

# Music
super + {p,comma,period}
  cmus-remote {--pause,--prev,--next}

super + shift + {comma,period}
  cmus-remote --seek {-10,+10}

# Volume
super + {minus,equal}
  pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

# Brightness
super + shift + {minus,equal}
  doas xbacklight {-,+}5

# XF86 Keys
XF86Audio{Play,Pause,Prev,Next}
  cmus-remote {--play,--pause,--prev,--next}

XF86Audio{_,Mic}Mute
  {pactl set-sink-mute @DEFAULT_SINK@ toggle,pactl set-source-mute @DEFAULT_SOURCE@ toggle}

XF86Audio{Lower,Raise}Volume
  pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86MonBrightness{Down,Up}
  doas xbacklight {-,+}5

# Scripts
Print
  ctl screenshot
super + shift + p
  menu-system
super + shift + v
  start-vm
super + b
  menu-book
super + grave
  menu-unicode

# Pokoy
super + shift + b
  pokoy -n

# Reload config
super + alt + r
  killall -s SIGUSR1 sxhkd
