# Apps
super + Return
  $TERMINAL
super + {r,m}
  $TERMINAL -e {ranger,cmus}
super + w
  $BROWSER
super + {_,shift} + d
  {dmenu_exec,j4-dmenu-desktop --dmenu='dmenu-color -i -l 15'}

# Music
super + {p,comma,period}
  playerctl -p cmus {play-pause,previous,next}

# Volume
super + {minus,equal}
  pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

# Brightness
super + shift + {minus,equal}
  brightnessctl s 5%{-,+}

# XF86 Keys
XF86Audio{Play,Pause,Prev,Next}
  playerctl -p cmus {play-pause,previous,next}

XF86Audio{_,Mic}Mute
  pactl {set-sink-mute @DEFAULT_SINK@ toggle,set-source-mute @DEFAULT_SOURCE@ toggle}

XF86Audio{Lower,Raise}Volume
  pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86MonBrightness{Down,Up}
  brightnessctl s 5%{-,+}

# Scripts
Print
  ctl screenshot
super + shift + p
  menu-system
super + shift + v
  start-vm
super + b
  menu-book
super + grave
  menu-unicode

# Reload config
super + alt + r
  killall -s SIGUSR1 sxhkd
