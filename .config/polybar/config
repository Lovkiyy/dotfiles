[colors]
background = #282828
foreground = #ebdbb2
lightred = #fb4934

[bar/archie]
width = 100%
height = 25
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 3
;line-color = #f00

padding-left = 25
padding-right = 15

module-margin-left = 2
module-margin-right = 5

font-0 = M+ 1p:style=bold:pixelsize=13;1
font-1 = UbuntuMono Nerd Font:pixelsize=15;1
font-2 = EmojiOne:scale=10;1
font-3 = UbuntuMono Nerd Font:pixelsize=18;1

modules-left =
modules-right = date arch-update
modules-center = i3 bspwm

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/date]
type = internal/date
interval = 5

date = "🗓 %A %d "
date-alt = " %Y-%m-%d"

time = " ⏰ %H:%M"
time-alt = %H:%M:%S

label = "%date% %time%"

[module/arch-update]
type = custom/script
exec = ~/.config/polybar/arch-update.sh
interval = 30
label = "🔃"
;label =Updates - %output%

[module/taskwarrior]
interval = 30
type = custom/script
exec = $HOME/.config/polybar/taskwarrior
format = <label>
format-prefix = " "

[module/i3]
type = internal/i3

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;ﱘ
ws-icon-default = ♟

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 0
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%
label-focused-foreground = #f0eac1
label-focused-background = #4f3f47
label-focused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-unfocused = %icon%
label-unfocused-padding = 4
label-unfocused-foreground = #928374

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %icon%
label-visible = %icon%
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #c64e3d
label-urgent-padding = 4

; Separator in between workspaces
;label-separator = ""
;label-separator-padding = 0
;label-separator-foreground = #ffb52a

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = #f0eac1
label-focused-background = #4f3f47
label-focused-padding = 4

label-occupied = %index%
label-occupied-padding = 4

label-urgent = %index%!
label-urgent-foreground = #000000
label-urgent-background = #c64e3d
label-urgent-padding = 4

label-empty = %index%
label-empty-foreground = #928374
label-empty-padding = 4

; Separator in between workspaces
; label-separator = |


[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

