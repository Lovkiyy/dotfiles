[module/backlight]
type = internal/xbacklight
card = intel_backlight
enable-scroll = false
format = <label>
label = "猪 %percentage%%"

[module/date]
type = internal/date
interval = 30

date = "%A %d"
date-alt = "%Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

label = " %date% - %time%"

[module/battery-comb]
type = custom/script
exec = battery-combined-udev.sh
tail = true
interval = 20

[module/music]
type = custom/script
exec = mpris-status.sh
