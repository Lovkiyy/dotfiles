ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/i3]
type = internal/i3
; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
