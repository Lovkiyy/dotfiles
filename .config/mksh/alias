# Clipboard handling
alias xcopy='xsel -b -i -l /dev/null'
alias xpaste='xsel -b -o -l /dev/null'

alias cat=bat
alias mon=gotop

alias ce=config_edit
alias ns=inotes
alias ex=exercism
alias me=mega-exec
alias ka=killall
alias yt=youtube-viewer
alias v=nvim
alias r=ranger
alias d=dict
alias gi="grep -i"
alias mk="mkdir -pv"
alias xi="doas xbps-install"
alias xr="doas xbps-remove -R"
alias xq="xbps-query"
alias tor="transmission-daemon"
alias own="doas chown -R $USER"
alias wttr="curl -s wttr.in"
alias ansicat="iconv -f CP437"
alias mpweb="mpv av://v4l2:/dev/video0"
alias ap="nvim $HOME/usr/notes/handbook/apps.md"
alias andr="doas simple-mtpfs --device 1 -o allow_other /media"
alias lsbk="doas lsblk -o NAME,MOUNTPOINT,SIZE,FSUSED,FSTYPE,PTTYPE,RM"

# Git aliases
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias gpl="git pull"
alias gps="git push"

# Defaults
alias ls="ls -hNF --color=tty --group-directories-first"
alias la="ls -lAh"
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}"
alias calcurse="calcurse -D ~/usr/notes/calcurse"
alias dmesg="doas dmesg --ctime --color=always"
