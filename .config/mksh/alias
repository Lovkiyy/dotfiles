# Clipboard handling
alias xcopy='xsel -b -i -l /dev/null'
alias xpaste='xsel -b -o -l /dev/null'

alias cat=bat
alias mon=gotop

alias ex=exercism
alias me=mega-exec
alias ce=config-edit
alias ns=inotes
alias ka=killall
alias v=nvim
alias r=ranger
alias d=dict
alias gi="grep -i"
alias mk="mkdir -pv"
alias xi="sudo xbps-install"
alias xr="sudo xbps-remove"
alias xq="xbps-query"
alias tor="transmission-daemon"
alias own="sudo chown -R $USER"
alias wttr="curl -s wttr.in"
alias ansicat="iconv -f CP437"
alias chill="mpv 'https://www.youtube.com/watch?v=hHW1oY26kxQ' && disown"
alias mpweb="mpv av://v4l2:/dev/video0"
alias andr="sudo simple-mtpfs --device 1 -o allow_other /media"
alias lsbk="sudo lsblk -o NAME,MOUNTPOINT,SIZE,FSUSED,FSTYPE,PTTYPE,RM"

# Config stuff
alias ap="nvim $HOME/usr/notes/handbook/apps.md"

alias cfb="nvim $XDG_CONFIG_HOME/bspwm/bspwmrc"
alias cfp="nvim $XDG_CONFIG_HOME/polybar/config"
alias cfv="nvim $XDG_CONFIG_HOME/nvim/init.vim"
alias cfq="nvim $XDG_CONFIG_HOME/qutebrowser/config.py"
alias cfs="nvim $XDG_CONFIG_HOME/sxhkd/sxhkdrc"

# Git aliases
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias gpl="git pull"
alias gps="git push"

# Go aliases
alias gor="go run"

# Defaults
alias ls="ls -hN --color=tty --group-directories-first"
alias la="ls -lAh"
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}"
alias calcurse="calcurse -D ~/usr/notes/calcurse"

alias ...="cd ../.."
alias ....="cd ../../.."
