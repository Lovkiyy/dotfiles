# Clipboard handling
alias xcopy='xclip -i -selection clipboard'
alias xpaste='xclip -o -selection clipboard'

alias vdn="vd $HOME/usr/notes/base"
alias ap="nvim $HOME/usr/notes/handbook/apps.md"
alias ce=config_edit
alias ns=inotes
alias sc="systemctl --user"
alias ssc="sudo systemctl"
alias v=nvim
alias r=ranger
alias p="sudo pacman --color=always"
alias y="yay --color=always"
alias gi="grep -i"
alias mk="mkdir -pv"
alias mpweb="mpv av://v4l2:/dev/video0"
alias lsbk="sudo lsblk -o NAME,MOUNTPOINT,SIZE,FSUSED,FSTYPE,PTTYPE,RM"

# Git aliases
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias gpl="git pull"
alias gps="git push"

# Defaults
alias ls="ls -hNF --color=tty --group-directories-first"
alias la="ls -lAh"
alias rm="rm -i"
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}"
alias dmesg="sudo dmesg --ctime --color=always"
alias ffprobe="ffprobe -hide_banner"
alias ffmpeg="ffmpeg -hide_banner"
alias cat=bat
