# Borders
for_window [class="^.*"] border pixel 2
set $mod Mod4
gaps inner 3
hide_edge_borders smart
smart_gaps on

# Startup
exec_always --no-startup-id bars

exec --no-startup-id xset r rate 300 50
exec --no-startup-id setxkbmap "us,ru" ",winkeys" "grp:toggle,altwin:swap_lalt_lwin,ctrl:nocaps,terminate:ctrl_alt_bksp"
exec --no-startup-id xgamma -bgamma 0.65
exec --no-startup-id sudo xbacklight 20
exec --no-startup-id hsetroot -fill $XDG_CONFIG_HOME/X11/wall
exec --no-startup-id xset -b dpms 0 0 240

exec --no-startup-id physlock -sm &

exec --no-startup-id safeeyes &
exec --no-startup-id cmst -m -w 3 &
exec --no-startup-id xbanish &
exec --no-startup-id dunst &
exec --no-startup-id sxhkd &
exec --no-startup-id redshift -l $(get-coord) &
exec --no-startup-id blueman-applet &

# Sticky window
bindsym $mod+g sticky toggle; floating toggle; resize set 900 px 650 px; move position center
bindsym $mod+s scratchpad show

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Desktop next/prev
bindsym $mod+braceright workspace next
bindsym $mod+bracketleft  workspace prev

# Split type
bindsym $mod+z split h
bindsym $mod+v split v

# change container layout
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# focus the parent container
bindsym $mod+a focus parent

# restart i3 inplace
bindsym $mod+Escape restart

# kill focused window
bindsym $mod+q kill

# Resize window
bindsym $mod+y resize grow width 10px
bindsym $mod+u resize grow height 10px
bindsym $mod+i resize shrink height 10px
bindsym $mod+o resize shrink width 10px

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #fbf1f7
