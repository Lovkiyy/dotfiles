# i3 config file (v4)

# Some basic settings
for_window [class="^.*"] border pixel 2
workspace_auto_back_and_forth yes
set $mod Mod4
font pango: Ubuntu Mono Nerd Font 12

gaps inner 15
workspace 1 gaps inner 0

hide_edge_borders smart
smart_gaps on

# Autostart
#exec --no-startup-id $HOME/.config/keymap
exec --no-startup-id setxkbmap "us,ru" ",winkeys" "grp:toggle,altwin:swap_lalt_lwin,caps:swapescape"
exec --no-startup-id hsetroot -center $XDG_CONFIG_HOME/wall

exec --no-startup-id xcompmgr -n -f -c -D 2 -I 0.04 -O 0.04 &
exec --no-startup-id redshift &
exec --no-startup-id pokoy -r &
exec --no-startup-id unclutter &
exec --no-startup-id polybar archie &

# apps
bindsym $mod+Return exec st
bindsym $mod+r exec st -e ranger
bindsym $mod+w exec qutebrowser
bindsym $mod+d exec rofi -show run

# Scripts
bindsym Print exec $HOME/.scripts/screen
bindsym $mod+Shift+p exec $HOME/.scripts/rofi-system
bindsym $mod+grave exec $HOME/.scripts/rofimoji
bindsym $mod+Shift+m exec $HOME/.scripts/rofimount
bindsym $mod+Shift+v exec $HOME/.scripts/roficheat
bindsym $mod+b exec $HOME/.scripts/rofibook

# Music
bindsym $mod+m exec st -e cmus
bindsym $mod+p exec cmus-remote --pause
bindsym $mod+comma exec cmus-remote --prev
bindsym $mod+period exec cmus-remote --next

# Volume control
bindsym $mod+equal exec amixer sset PCM 5+
bindsym $mod+minus exec amixer sset PCM 5-

# Gaps
bindsym $mod+g           gaps inner current plus 5
bindsym $mod+Shift+g     gaps inner current minus 5
bindsym $mod+bracketleft gaps outer current plus 5
bindsym $mod+Shift+bracketleft  gaps outer current minus 5

# Resize window
bindsym $mod+y resize grow width 10px or 10ppt
bindsym $mod+u resize grow height 10px or 10ppt
bindsym $mod+i resize shrink height 10px or 10ppt
bindsym $mod+o resize shrink width 10px or 10ppt

# Split type
bindsym $mod+z split h
bindsym $mod+v split v

# change container layout
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# restart i3 inplace
bindsym $mod+Shift+r restart

# kill focused window
bindsym $mod+q kill

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

set $c_red_l #fb4934
set $c_blue_l #83a598
set $c_blue_d #458588
set $c_magenta_d #b16286
set $c_black_d #1d2021
set $c_cyan_l #8ec07c
set $c_magenta_l #d3869b
set $c_yellow_l #fabd2f
set $c_red_d #cc241d
set $c_background #282828
set $c_cyan_d #689d6a
set $c_green_l #b8bb26
set $c_foreground #ebdbb2
set $c_white_d #dbae93
set $c_green_d #98971a
set $c_yellow_d #d79921
set $c_cursor #fff000
set $c_white_l #fbf1c7
set $c_black_l #665c54

#class                  background?   border        text          split
client.focused          $c_white_d    $c_white_d    $c_black_l    $c_white_d
client.focused_inactive $c_black_d    $c_background $c_black_l    $c_black_d
client.unfocused        $c_black_d    $c_background $c_black_l    $c_black_d
client.urgent           $c_magenta_l  $c_magenta_l  $c_black_l    $c_magenta_l
client.background       $c_background

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
